class Box {
  Box() 
  {
    SGEntity entity <- $SceneGraph.createShapeEntity(owner: this, shape: ShapeModel.BOX);
    entity.bindSizeProperty(name: SGEntity.SIZE_PROPERTY_NAME, property: size);
    entity.bindPaintProperty(name: SGEntity.PAINT_PROPERTY_NAME, property: paint);
  }

  void animateSize(Size size, DecimalNumber duration <- Default.duration(),  AnimationStyle animationStyle <- Default.animationStyle()) 
  {
    this.size.animateValue(endValue: size, duration: duration, animationStyle: animationStyle);
  }

  void setSize(Size size, DecimalNumber duration <- Default.duration(),  AnimationStyle animationStyle <- Default.animationStyle()) 
  {
    this.size.animateValue(endValue: size, duration: duration, animationStyle: animationStyle);
  }

  void setPaint(Paint paint, DecimalNumber duration <- Default.duration(),  AnimationStyle animationStyle <- Default.animationStyle()) 
  {
    this.paint.animateValue(endValue: paint, duration: duration, animationStyle: animationStyle);
  }

  @CompletelyHidden SizeProperty size <- new SizeProperty(value: new Size(width: 1, height: 1, depth: 1));
  @CompletelyHidden PaintProperty paint <- new PaintProperty(value: Color.WHITE);
} 