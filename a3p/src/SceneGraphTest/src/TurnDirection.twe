enum TurnDirection {
    LEFT( axis: Direction.POSITIVE_Y_AXIS ),
    RIGHT( axis: Direction.NEGATIVE_Y_AXIS ),
    FORWARD( axis: Direction.NEGATIVE_X_AXIS ),
    BACKWARD( axis: Direction.POSITIVE_X_AXIS );

    Direction axis;

    TurnDirection( Direction axis ) {
        this.axis <- axis;
    }

    Direction getAxis() {
        return this.axis;
    }
}